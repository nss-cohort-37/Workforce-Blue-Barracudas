@model BangazonWorkforce.Models.Department

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.Name)</h1>

<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class="col-lg-2">
            @Html.DisplayNameFor(model => model.Budget)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Budget)
        </dd>
        <dt class="col-lg-4">
            @Html.DisplayNameFor(model => model.Employees)
        </dt>
        <dd class="col-sm-10">
            @Html.Display(" ")
        </dd>
        @foreach (var employee in Model.Employees)
        {
            if (employee != null)
            {
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => employee.FirstName)
                </dd>
            }
        }
    </dl>
</div>
