@model BangazonWorkforce.Models.ViewModels.EmployeeDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1> Employee Details</h1>

<div>
    <h4>Employee #@Html.DisplayFor(model => model.Id)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            Department
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
        <dt class="col-sm-2">
            Computer
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Computer.Id) :
            @Html.DisplayFor(model => model.Computer.Make)
            @Html.DisplayFor(model => model.Computer.Model)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>

        <tr>
            @if (Model.trainingProgram.StartDate >= DateTime.Now)
            {

                <h5>Upcoming Programs</h5>

            }

            else
            {
                <h5>Past Programs</h5>

            }

            <td> @Html.DisplayNameFor(model => model.trainingProgram.Name)</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var program in Model.TrainingPrograms)
            {
        <tr>
            <td> @Html.DisplayFor(model => program.Name)</td>
        </tr>
    }


        </tbody>
    </table>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a> |
    @Html.ActionLink("Assign", "Assign", new { id = Model.Id }) 

</div>
